{
    "name": "dcc-ue-tool-framework",
    "displayName": "DCC & UE Tool Framework",
    "description": "AI驱动的DCC工具和UE引擎工具管理框架集成",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dccue.createTool",
                "title": "Create DCC/UE Tool from Description"
            },
            {
                "command": "dccue.generateConfig",
                "title": "Generate SDD Config from Selection"
            },
            {
                "command": "dccue.validateTool",
                "title": "Validate Current Tool"
            },
            {
                "command": "dccue.runTool",
                "title": "Run Current Tool"
            },
            {
                "command": "dccue.debugTool",
                "title": "Debug Tool"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "dccue.generateConfig",
                    "when": "editorTextFocus",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "dccue.validateTool",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dccueExplorer",
                    "title": "DCC/UE Tools",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "dccueExplorer": [
                {
                    "id": "dccueToolsView",
                    "name": "Tools Explorer",
                    "when": "dccue:enabled"
                },
                {
                    "id": "dccueAiAssistant",
                    "name": "AI Assistant",
                    "when": "dccue:enabled"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "DCC/UE Tool Framework",
            "properties": {
                "dccue.aiProvider": {
                    "type": "string",
                    "default": "openai",
                    "enum": ["openai", "anthropic", "local"],
                    "description": "AI模型提供商"
                },
                "dccue.apiKey": {
                    "type": "string",
                    "description": "AI服务API密钥"
                },
                "dccue.defaultOutputDir": {
                    "type": "string",
                    "default": "./generated_tools",
                    "description": "默认工具输出目录"
                },
                "dccue.enableAutoValidation": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用自动代码验证"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4",
        "@vscode/test-electron": "^2.2.2"
    },
    "dependencies": {
        "axios": "^1.3.0",
        "yaml": "^2.2.1"
    }
}