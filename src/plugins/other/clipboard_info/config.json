{
    "plugin": {
        "name": "剪贴板信息工具",
        "version": "1.0.0",
        "type": "other",
        "description": "获取并打印当前剪贴板中的内容，支持文本和文件列表。\n\n功能：\n- 检测剪贴板中的文件路径（复制的文件）\n- 检测剪贴板中的文本内容\n- 显示剪贴板内容类型和详细信息",
        "author": "DCC Tool Team",
        "tags": ["utility"]
    },
    "execution": {
        "entry_point": "plugin.py",
        "function": "execute",
        "mode": "standalone"
    },
    "parameters": {
        "show_preview": {
            "type": "boolean",
            "default": true,
            "description": "是否显示内容预览（文本最多显示500字符）"
        },
        "max_files": {
            "type": "integer",
            "default": 50,
            "min": 1,
            "max": 1000,
            "description": "最多显示的文件数量"
        }
    }
}
