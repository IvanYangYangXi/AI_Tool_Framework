{
  "plugin": {
    "name": "BlenderMeshOptimizer",
    "version": "1.0.0",
    "type": "dcc",
    "target_dcc": "blender",
    "min_version": "3.0",
    "max_version": "4.2",
    "description": "专业的Blender网格优化工具，支持网格简化、重复面删除、材质优化等功能",
    "author": "DCC Tool Framework Team",
    "entry_point": "plugin.py"
  },
  "dependencies": {
    "required": ["bpy"],
    "optional": []
  },
  "capabilities": [
    "网格简化",
    "删除重复几何体",
    "法线重计算",
    "材质优化",
    "UV坐标保持",
    "LOD生成"
  ],
  "parameters": {
    "decimate_ratio": {
      "type": "float",
      "default": 0.5,
      "min": 0.01,
      "max": 1.0,
      "description": "网格简化比例"
    },
    "remove_doubles": {
      "type": "boolean",
      "default": true,
      "description": "删除重复顶点"
    },
    "recalculate_normals": {
      "type": "boolean",
      "default": true,
      "description": "重新计算法线"
    },
    "optimize_materials": {
      "type": "boolean",
      "default": true,
      "description": "优化材质"
    },
    "preserve_uvs": {
      "type": "boolean",
      "default": true,
      "description": "保持UV坐标"
    },
    "output_path": {
      "type": "string",
      "default": "",
      "description": "输出文件路径"
    }
  },
  "installation": {
    "manual": "将plugin.py文件复制到Blender的scripts/addons目录",
    "automatic": "通过框架插件管理器自动安装"
  },
  "usage": {
    "basic": "选择网格对象后运行插件，设置优化参数",
    "advanced": "可批量处理多个对象，支持自定义输出报告"
  }
}