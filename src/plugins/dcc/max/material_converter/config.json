{
  "plugin": {
    "name": "MaxMaterialConverter",
    "version": "1.0.0",
    "type": "dcc",
    "target_dcc": "3ds_max",
    "min_version": "2021",
    "max_version": "2024",
    "description": "专业的3ds Max材质转换工具，支持多种渲染器间的材质格式转换",
    "author": "DCC Tool Framework Team",
    "entry_point": "plugin.py"
  },
  "dependencies": {
    "required": ["pymxs"],
    "optional": []
  },
  "capabilities": [
    "材质格式转换",
    "渲染器兼容性处理",
    "批量材质处理",
    "参数映射优化",
    "转换质量保证"
  ],
  "parameters": {
    "source_renderer": {
      "type": "string",
      "default": "Standard",
      "description": "源渲染器类型"
    },
    "target_renderer": {
      "type": "string",
      "default": "Arnold",
      "description": "目标渲染器类型"
    },
    "convert_textures": {
      "type": "boolean",
      "default": true,
      "description": "转换贴图路径"
    },
    "preserve_parameters": {
      "type": "boolean",
      "default": true,
      "description": "保持材质参数"
    },
    "batch_process": {
      "type": "boolean",
      "default": false,
      "description": "批量处理模式"
    },
    "output_log": {
      "type": "string",
      "default": "",
      "description": "转换日志输出路径"
    }
  },
  "installation": {
    "manual": "将plugin.py文件放置在3ds Max的scripts目录下",
    "automatic": "通过框架插件管理器自动安装"
  },
  "usage": {
    "basic": "选择材质后运行插件，选择目标渲染器",
    "advanced": "支持场景中所有材质的批量转换和自定义参数映射"
  }
}